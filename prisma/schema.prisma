generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

/**
 * Shopify session storage (required)
 */
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

/**
 * App subscription storage (RECOMMENDED â€“ production ready)
 */
model Subscription {
  id             Int      @id @default(autoincrement())
  shop           String   @unique
  planName       String
  status         String
  subscriptionId String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
